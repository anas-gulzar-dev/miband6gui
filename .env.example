# Environment Variables Template for Biosensor Data Capture Tool
# Copy this file to .env and update with your actual values

# Azure Computer Vision API Configuration
AZURE_API_KEY=your_azure_api_key_here
AZURE_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/

# Application Settings
DEFAULT_CAPTURE_INTERVAL=60
SCREENSHOTS_FOLDER=screenshots

# OCR API Settings
OCR_LANGUAGE=en
DETECT_ORIENTATION=true

# Window Detection Settings (comma-separated)
SCRCPY_WINDOW_TITLES=scrcpy,Mi Band,Android,Xiaomi

# USB Stability Settings
# Set to true to enable screenshot auto-deletion (may cause USB disconnects)
# Set to false to preserve screenshots and improve USB stability (RECOMMENDED)
ENABLE_AUTO_DELETE_SCREENSHOTS=false

# Window Size Validation Settings
# Minimum window size for capture - set to smaller values for small screens
MIN_WINDOW_WIDTH=10
MIN_WINDOW_HEIGHT=10
# Set to false to disable warnings for small windows
SHOW_SMALL_WINDOW_WARNING=true
# Threshold for what's considered a "small" window (shows warning but allows capture)
SMALL_WINDOW_WARNING_WIDTH=10
SMALL_WINDOW_WARNING_HEIGHT=10
